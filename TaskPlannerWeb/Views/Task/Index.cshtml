@using BusinessLogicLevel.Models;
@model IEnumerable<TaskModel>
@{
    ViewData["Title"] = "Index";
}

@*<h1>Tasks</h1>*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tasks</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Task" asp-action="Create" class="btn btn-primary">
                Add new Task
            </a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Estimated time (hours)
            </th>
            <th>
                Priority
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="20%">
                    @item.Title
                </td>
                <td width="40%">
                    @item.Description
                </td>
                <td width="20%">
                    @item.EstimatedTime
                </td>
                <td width="10%">
                    @item.TaskPriority
                </td>
                <td width="10%">
                    @item.TaskStatus
                </td>
            </tr>
        }
    </tbody>
</table>

</div>